<div class="container">
  <br />
  <br />
  <div class="card">
    <div class="card-body">
      <div class="row" style="width: 100%">
        <div class="col-md-12">
          <form
            id="formulario"
            autocomplete="off"
            method="POST"
            action="/matter/create"
          >
            <h2
              class="text-center"
              style="border-bottom: 0px !important;margin: 0px; background-color: #003e71;color: #fff !important; border-radius: 8px;"
            >
              Crear una nueva Materia
            </h2>
            <br /><br />
            <div class="form-group">
              <label for="name">Nombre</label>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <span class="icon-user-plus"></span>
                  </span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  id="name"
                  placeholder="Nombre"
                  required="true"
                />
              </div>
            </div>
            <br />
            <div class="form-group">
              <label for="img">Imagen</label>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <span class="icon-image"></span>
                  </span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="img"
                  id="img"
                  placeholder="Nombre"
                  required="true"
                />
              </div>
            </div>
            <br />
            <div class="form-group">
              <label for="description">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="5"
                style="height: 100%;"
                required="true"
              ></textarea>
            </div>

            <button
              type="submit"
              id="newArticle"
              class="btn btn-primary justify-content-center"
            >
              Guardar Materia
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
